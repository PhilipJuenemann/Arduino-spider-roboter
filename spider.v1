void laufen(){
  
   delay(400);
   vertical_2.write(20);
   horizontal_2.write(30);
   delay(100);
   vertical_2.write(pos2);
   delay(400);
   
   horizontal_1.write(75);
   horizontal_3.write(135);
  
}

